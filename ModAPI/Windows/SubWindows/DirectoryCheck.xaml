<SubWindows:BaseSubWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ComponentsInputs="clr-namespace:ModAPI.Components.Inputs" 
        xmlns:SubWindows="clr-namespace:ModAPI.Windows.SubWindows"
        xmlns:Utils="clr-namespace:ModAPI.Utils" 
        xmlns:Components="clr-namespace:ModAPI.Components" x:Class="ModAPI.Windows.SubWindows.DirectoryCheck" 
        x:Name="DirectoryCheckWindow"
        
        Height="400" Width="600" MaxWidth="400">
    <SubWindows:BaseSubWindow.Style>
        <StaticResource ResourceKey="SubWindow"/>
    </SubWindows:BaseSubWindow.Style>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300" MaxWidth="{Binding ActualWidth, ElementName=Window}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,10" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock Style="{StaticResource NormalLabel}" Margin="0, 0, 0, 5" TextWrapping="Wrap" Utils:Language.Key="Text" />
        </StackPanel>
        <StackPanel Margin="96,10,12,0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="center" Width="260">
            <Button x:Name="CloseButton" Margin="0" Style="{StaticResource NormalButton}" Click="CloseButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0, 0, 5, 0" Source="/ModAPI;component/resources/textures/Icons/Icon_Decline.png" />
                    <TextBlock Utils:Language.Key="Buttons.No" />
                </StackPanel>
            </Button>
            <Button x:Name="ConfirmButton" Margin="10,0,0,0" Style="{StaticResource NormalButton}" Click="ConfirmButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0, 0, 5, 0" Source="/ModAPI;component/resources/textures/Icons/Icon_Accept.png" />
                    <TextBlock Utils:Language.Key="Buttons.Fix" />
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>
</SubWindows:BaseSubWindow>
